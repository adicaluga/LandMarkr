generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Provider {
  GOOGLE
}

model Favourite {
  id        Int       @id @default(autoincrement())
  userId    Int
  provider  Provider  @default(GOOGLE)
  placeId   String
  name      String
  address   String?
  photoRef  String?
  rating    Float?
  createdAt DateTime  @default(now())

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, provider, placeId])
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  passwordHash String?
  createdAt DateTime @default(now())
  favorites Favourite[]
}
